@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Tags List";
}

<h1>@ViewData["Title"]</h1>

@if (User.IsInRole("Administrator"))
{
    <div class="mb-3">
        <a asp-controller="Tag" asp-action="Create" class="btn btn-success">Add New Tag</a>
    </div>
}

@if (User.IsInRole("Moderator"))
{
    <div class="mb-3">
        <a asp-controller="Tag" asp-action="Create" class="btn btn-success">Add New Tag</a>
    </div>
}


<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@item.Tag.Name</h5>
                        <p class="card-text">
                            Number of Articles: <span class="badge bg-primary">@item.ArticleCount</span>
                        </p>
                        <a asp-controller="Tag" asp-action="Details" asp-route-id="@item.Tag.TagId" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
