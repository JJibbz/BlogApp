@model IEnumerable<BlogApp.Models.Comment>

@{
    ViewData["Title"] = "Comments List";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-danger">No comments found.</div>
    }
    else
    {
        <div class="row">
            @foreach (var comment in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@comment.Content</h5>
                            <p class="card-text">@comment.CommentDate</p>
                            <a asp-controller="Comment" asp-action="Details" asp-route-id="@comment.CommentId" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
