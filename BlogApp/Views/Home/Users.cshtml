@model IEnumerable<BlogApp.Models.User>

@{
    ViewData["Title"] = "Users List";
}

<h1>@ViewData["Title"]</h1>



@if (User.IsInRole("Administrator"))
{
    <div class="mb-3">
        <a asp-controller="Account" asp-action="Register" class="btn btn-success">Add New User</a>
    </div>
}


<div class="container">
    <div class="row">
        @foreach (var user in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">@user.FirstName @user.LastName</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <strong>Email:</strong> @user.Email <br />
                            
                        </p>
                        <div>
                           
                            @if (user.Role != null)
                            {
                                <span class="badge bg-primary">@user.Role.Name</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No Role Assigned</span>
                            }
                        </div>
                        <div class="mt-3">
                            <a asp-controller="User" asp-action="Details" asp-route-id="@user.UserId" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                    
                </div>
            </div>
        }
    </div>
</div>