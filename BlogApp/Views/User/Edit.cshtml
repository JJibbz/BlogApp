@model BlogApp.Models.UserEditViewModel

<h2>Edit User</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="User.UserId" />

    <div class="form-group">
        <label asp-for="User.FirstName" class="control-label"></label>
        <input asp-for="User.FirstName" class="form-control" />
        <span asp-validation-for="User.FirstName" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="User.LastName" class="control-label"></label>
        <input asp-for="User.LastName" class="form-control" />
        <span asp-validation-for="User.LastName" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="User.Email" class="control-label"></label>
        <input asp-for="User.Email" class="form-control" />
        <span asp-validation-for="User.Email" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="User.Phone" class="control-label"></label>
        <input asp-for="User.Phone" class="form-control" />
        <span asp-validation-for="User.Phone" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="User.Password" class="control-label"></label>
        <input asp-for="User.Password" class="form-control" type="password" />
        <span asp-validation-for="User.Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SelectedRoleId" class="control-label mt-3">Role</label>
        <div>
            @if (Model.Roles != null && Model.Roles.Any())
            {
                @foreach (var role in Model.Roles)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="SelectedRoleId" value="@role.RoleId" @(role.RoleId == Model.SelectedRoleId ? "checked" : "") />
                        <label class="form-check-label">@role.Name</label>
                    </div>
                }
            }
            else
            {
                <p>No roles available.</p>
            }
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary mt-3" />
    </div>
</form>

<div>
    <a asp-controller="Home" asp-action="Users" class="btn btn-secondary mt-3">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
